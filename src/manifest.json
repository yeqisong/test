{
    "manifest_version": 3,
    "name": "__MSG_appTitle__",
    "version": "1.0.0",
    "description": "__MSG_appDescription__",
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "./libs/background/main.js"
    },
    "action": {
        "default_title": "__MSG_actionTitle__",
        "default_popup": "./libs/popup.html",
        "default_icon": {
            "16": "/assets/images/icon16.png",
            "32": "/assets/images/icon32.png",
            "48": "/assets/images/icon48.png",
            "64": "/assets/images/icon64.png",
            "128": "/assets/images/icon128.png"
        }
    },
    "icons": {
        "16": "/assets/images/icon16.png",
        "32": "/assets/images/icon32.png",
        "48": "/assets/images/icon48.png",
        "64": "/assets/images/icon64.png",
        "128": "/assets/images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./libs/content/info.js"],
            "run_at": "document_idle"
        }
    ],
    "default_locale": "zh_CN",
    "chrome_url_overrides": {
        "newtab": "./libs/newtab.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'unsafe-eval'; object-src 'self';"
    },
    "web_accessible_resources": [
        {
            "resources": ["./libs/content/info3.js", "./libs/content/info2.js"],
            "matches": ["https://web-accessible-resources-1.glitch.me/*"]
        }
    ]
}
